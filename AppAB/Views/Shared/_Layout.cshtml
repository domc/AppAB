<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("A&B", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Products" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Parfumi", "Index", "Products")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Nega" ? "active" : "")">@Html.ActionLink("Nega", "Nega", "Products")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Nohti" ? "active" : "")">@Html.ActionLink("Nohti", "Nohti", "Products")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "MakeUp" ? "active" : "")">@Html.ActionLink("Makeup", "MakeUp", "Products")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Naročila", "Index", "Orders")</li>
                    }
                    @if (Request.IsAuthenticated)
                    {
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" && ViewContext.RouteData.Values["Action"].ToString() == "Details" ? "active" : "")">@Html.ActionLink("Košarica", "Details", "Orders", new { id = "MyCart" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dobrodošli v spletni trgovini A&B parfumerije in kozmetike!!!</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
